                        <option>AB positivo</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleFormControlSelect1">Provincia:</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="nam" @onchange="provincias">
